<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:global="clr-namespace:OpenUtau.App.Controls">
  <Style Selector="TextBlock">
    <Setter Property="FontSize" Value="12"/>
  </Style>
  <Style Selector="Label">
    <Setter Property="FontSize" Value="12"/>
  </Style>
  <Style Selector="TextBox">
    <Setter Property="Height" Value="24"/>
    <Setter Property="Padding" Value="4,0"/>
    <Setter Property="Margin" Value="0,0,0,4"/>
  </Style>

  <Style Selector="ToggleButton.normal">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Height" Value="20"/>
    <Setter Property="Margin" Value="0,4"/>
    <Setter Property="Padding" Value="4,0,4,2"/>
  </Style>

  <Style Selector="ToggleButton.toolbar">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Height" Value="20"/>
    <Setter Property="Margin" Value="0,4"/>
    <Setter Property="Padding" Value="4,0,4,0"/>
  </Style>

  <Style Selector="ToggleSwitch /template/ Border#SwitchKnobBounds">
    <Setter Property="Background" Value="{DynamicResource AccentBrush1}"/>
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="MinHeight" Value="20"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Margin" Value="0,0,0,4"/>
    <Setter Property="Padding" Value="4,0,0,0"/>
  </Style>
  <Style Selector="ComboBoxItem">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="MinHeight" Value="20"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Padding" Value="4,0,0,0"/>
  </Style>

  <Style Selector="ListBoxItem">
    <Setter Property="MinHeight" Value="24"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Padding" Value="4,0,0,0"/>
    <Setter Property="Margin" Value="0"/>
  </Style>
  
  <Style Selector="global|LyricBox TextBlock">
    <Setter Property="Margin" Value="4,0"/>
  </Style>

  <Style Selector="global|LyricBox TextBox">
    <Setter Property="Margin" Value="0"/>
    <Setter Property="Padding" Value="4,0"/>
  </Style>

  <Style Selector="global|ExpSelector Viewbox TextBlock">
    <Setter Property="Margin" Value="0,0,4,2"/>
    <Setter Property="Padding" Value="0"/>
  </Style>
    
</Styles>